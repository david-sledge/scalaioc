import scala.ioc._

id("say hello", println("Hello, World!"))

id_("say hello once", println("Hello, World!  You'll have to force me to say it again."))

id("hello to...", println(s"Hello, ${c("who")}!"))

id("say hello once again", ref("say hello once"))

id("say hello once again, NOW!", ref_("say hello once"))

id("scope", "World")

id("scoped hello", println(s"Hello, ${ref("scope")}!"))

id("scoped hello2", let("who", ref("scope"), ref("hello to...")))
